<mvc:View
    controllerName="ajaxtest.controller.ajax"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
        				<Button text="Default" press="onPress" />
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
<mvc:View
    controllerName="wizardsample.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
		<NavContainer id="wizardNavContainer">
            <pages>
				<Page
				id="wizardContentPage"
				showHeader="false">
					<content>
						<Wizard id="CreateProductWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
								complete="wizardCompletedHandler">
							<WizardStep id="ProductTypeStep"
										title="Product Type"
										validated="true">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Select options below..."
										showIcon="true"/>
								<Text class="sapUiSmallMarginBottom"
										text="What is your today's base type?"/>
								<HBox
										alignItems="Center"
										justifyContent="Center"
										width="100%">
									<SegmentedButton
										width="320px"
										selectionChange="setProductTypeFromSegmented">
										<items>
											<SegmentedButtonItem icon="sap-icon://iphone" text="Tea"/>
											<SegmentedButtonItem icon="sap-icon://sys-monitor" text="Coffee"/>
											<SegmentedButtonItem icon="sap-icon://database" text="Something"/>
                                            <SegmentedButtonItem icon="sap-icon://database" text="Anything"/>
										</items>
									</SegmentedButton>
								</HBox>
							</WizardStep>
							<WizardStep id="ProductTypeStep2"
										title="Product Type"
										validated="true">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Numui"
										showIcon="true"/>
								<Text class="sapUiSmallMarginBottom"
										text="What is your health level?"/>
								<HBox
										alignItems="Center"
										justifyContent="Center"
										width="100%">
									<SegmentedButton
										width="320px"
										selectionChange="setProductTypeFromSegmented">
										<items>
											<SegmentedButtonItem icon="sap-icon://iphone" text="good"/>
											<SegmentedButtonItem icon="sap-icon://sys-monitor" text="as usual"/>
											<SegmentedButtonItem icon="sap-icon://database" text="still surviving"/>
										</items>
									</SegmentedButton>
								</HBox>
							</WizardStep>
							<WizardStep id="ProductTypeStep3"
										title="Product Type"
										validated="true">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Numui"
										showIcon="true"/>
								<Text class="sapUiSmallMarginBottom"
										text="What is your fatigue level?"/>
								<HBox
										alignItems="Center"
										justifyContent="Center"
										width="100%">
									<SegmentedButton
										width="320px"
										selectionChange="setProductTypeFromSegmented">
										<items>
											<SegmentedButtonItem icon="sap-icon://iphone" text="1"/>
											<SegmentedButtonItem icon="sap-icon://sys-monitor" text="2"/>
											<SegmentedButtonItem icon="sap-icon://database" text="3"/>
										</items>
									</SegmentedButton>
								</HBox>
							</WizardStep>
							<WizardStep id="ProductTypeStep4"
										title="Product Type"
										validated="true">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="Numui"
										showIcon="true"/>
								<Text class="sapUiSmallMarginBottom"
										text="What is your time?"/>
								<HBox
										alignItems="Center"
										justifyContent="Center"
										width="100%">
		                            <Label
		                            	class="sapUiSmallMarginTop"
		                            	text = "{/timePickers/TP1/format}" />
	                            	<TimePicker
                        				id="TP1"
	                        			value="19:15"
                        				valueFormat="HH:mm"
                        				displayFormat="HH:mm"
                        				change="handleChange"
                        				maskMode="{= ${/maskMode/state} ? 'On' : 'Off'}"
                        				placeholder="{/timePickers/TP1/placeholder}" />
								</HBox>
							</WizardStep>
						</Wizard>
					</content>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<Button text="Cancel" press="handleWizardCancel"/>
						</OverflowToolbar>
					</footer>
				</Page>
				<Page id="wizardReviewPage" showHeader="false">
					<content>
						<form:SimpleForm
								title="1. Base Type"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label text="Type"/>
								<Text id="ProductTypeChosen" text="{/productType}"/>
								<Link press="editStepOne" text="Edit" />
							</form:content>
						</form:SimpleForm>

						<form:SimpleForm
								title="2. Health Level"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label text="xx"/>
								<Text id="ProductNameChosen" text="{/productName}"/>
							</form:content>
						</form:SimpleForm>

						<form:SimpleForm
								title="3. Fatigue Level"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label text="Some text"/>
								<Text text="xx"/>
							</form:content>
						</form:SimpleForm>

						<form:SimpleForm
								title="4. time"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label text="time"/>
								<Text id="ProductPriceChosen" text="xx:xx"/>
							</form:content>
						</form:SimpleForm>
					</content>
					<footer>
						<Bar>
							<contentRight>
								<Button text="Submit" press="handleWizardSubmit"/>
								<Button text="Cancel" press="handleWizardCancel"/>
							</contentRight>
						</Bar>
					</footer>
				</Page>
            </pages>
		</NavContainer>
    </Shell>
</mvc:View>
